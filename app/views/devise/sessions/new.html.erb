<div class="w-96 mx-auto min-h-screen align-middle items-center justify-center flex">
  <div class="py-12 px-4 basis-full">
    <h1 class="text-3xl dark:text-indigo-600">.: OnStage :: Login</h1>

    <div class="rounded-lg my-5 p-5 border border-slate-700">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="my-5">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "dark:bg-slate-500 focus:dark:bg-indigo-900 focus:border-b-indigo-500 focus:text-white dark:border-b-indigo-900 border-b-indigo-700" %>
        </div>

        <div class="my-5">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "dark:bg-slate-500 focus:dark:bg-indigo-900 focus:border-b-indigo-500 focus:text-white dark:border-b-indigo-900 border-b-indigo-700" %>
        </div>

        <div class="my-5">
          <%= render "devise/shared/links" %>
        </div>

        <div class="my-5 text-right">
          <%= f.submit 'Login', class: "py-2 px-4 text-sm font-medium focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 bg-indigo-900 dark:bg-indigo-900 text-white py-1 px-2 border border-indigo-600 hover:border-blue-500 rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
