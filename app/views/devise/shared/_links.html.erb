<div class="flex items-center flex items-center justify-end mt-4">
  <%- if controller_name != 'sessions' %>
      <p>
        <%= link_to "Entrar", new_session_path(resource_name), class: "underline text-sm text-gray-600 hover:text-gray-900" %>
      </p>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p>
        <%= link_to "Cadastrar", new_registration_path(resource_name), class: "underline text-sm text-gray-600 hover:text-gray-900" %>
      </p>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <p>
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "underline text-sm text-gray-600 hover:text-gray-900" %>
      </p>
  <% end %>
</div>
