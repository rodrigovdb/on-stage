<% if @band.errors.present? %>
  <%= notice_stream(domain: :band, message: :error, status: 'red') %>
  <%= form_band_stream(band: @band) %>
<% else %>
  <%= notice_stream(domain: :band, message: :create, status: 'green') %>

  <%= turbo_stream.replace :new_band do %>
    <%= turbo_frame_tag :new_band %>
  <% end %>

  <%= turbo_stream.replace :bands_list do %>
    <%= turbo_frame_tag :bands_list do %>
      <%= render 'bands' %>
    <% end %>
  <% end %>
<% end %>
