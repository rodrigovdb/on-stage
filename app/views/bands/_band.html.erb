<tr class="border block md:table-row hover:bg-slate-800" id="<%= dom_id band %>">
  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.band.name') %></span>
    <%= band.name %>
  </td>
  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.band.owner') %></span>
    <%= band.owner.email %>
  </td>
  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold">&nbsp;</span>

    <%= link_to t('show'),
      band,
      class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600' %>

    <%= link_to t('edit'),
      edit_band_path(band),
      class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600',
      data: { 'turbo-frame': 'new_band' } %>
  </td>
</tr>
