<tr class="border border-grey-500 md:border-none block md:table-row hover:bg-indigo-600" id="<%= dom_id band %>">
  <td class="p-2 md:border text-left block md:table-cell">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.band.name') %></span>
    <%= band.name %>
  </td>
  <td class="p-2 md:border text-left block md:table-cell">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.band.owner') %></span>
    <%= band.owner.email %>
  </td>
  <td class="p-2 md:border text-left block md:table-cell">
    <span class="inline-block w-1/3 md:hidden font-bold">&nbsp;</span>

    <%= link_to t('show'),
      band,
      class: 'bg-indigo-100 dark:bg-indigo-600 text-white font-bold py-1 px-2 border border-blue-500 rounded' %>

    <%= link_to t('edit'),
      edit_band_path(band),
      class: 'bg-indigo-100 dark:bg-indigo-600 text-white font-bold py-1 px-2 border border-blue-500 rounded',
      data: { 'turbo-frame': 'new_band' } %>
  </td>
</tr>
