<%= turbo_frame_tag dom_id band do %>
  <%= form_with(
    model: band,
    id: 'form',
    class: 'contents',
    html: { data: { controller: 'notice', action: 'submit->notice#clear' } }
  ) do |form| %>
    <% if band.errors.any? %>
      <div class="py-2 px-4 border dark:border-blue-500 dark:text-red-500 rounded-md my-5">
        <h2><%= pluralize(band.errors.count, "error") %> prohibited this band from being saved:</h2>

        <ul>
          <% band.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.label :name, class: "text-sm font-medium block mb-2" %>
      <%= form.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <div class="mb-6">
      <div class="inline-flex rounded-md shadow-sm" role="group">
        <%= form.submit class: "py-2 px-4 text-sm font-medium focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 bg-indigo-100 dark:bg-indigo-600 text-white py-1 px-2 border border-indigo-600 hover:border-blue-500 rounded-l-lg" %>
        <%= link_to "#{t('back_to')} #{t('my_bands').downcase}",
          bands_path,
          class: "py-2 px-4 text-sm font-medium focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 bg-indigo-100 dark:bg-indigo-600 text-white py-1 px-2 border border-indigo-600 hover:border-blue-500 rounded-r-md" %>
      </div>
    </div>
  <% end %>
<% end %>
