<% if @band_user.errors.present? %>
  <%= notice_stream(domain: :user, message: :error, status: 'red') %>
  <%= turbo_stream.replace 'form', partial: 'form', locals: { band_user: @band_user, band: @band } %>
<% else %>
  <%= notice_stream(domain: :user, message: :create, status: 'green') %>

  <%= turbo_stream.replace :new_band_user do %>
    <%= turbo_frame_tag :new_band_user %>
  <% end %>

  <%= turbo_stream.replace :band_users_list do %>
    <%= turbo_frame_tag :band_users_list do %>
      <%= render 'band_users' %>
    <% end %>
  <% end %>
<% end %>
