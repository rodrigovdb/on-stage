<table class="min-w-full block md:table">
  <thead class="block md:table-header-group bg-indigo-100 dark:bg-indigo-900 font-bold text-gray-900 transition-colors rounded-md dark:text-light">
    <tr class="block md:table-row absolute -top-full md:top-auto -left-full md:left-auto md:relative">
      <th class="p-2 text-left block md:table-cell md:border md:dark:border-indigo-900"><%= t('models_and_attributes.attributes.user.email') %></th>
      <th class="p-2 text-left block md:table-cell md:border md:dark:border-indigo-900">&nbsp;</th>
    </tr>
  </thead>

  <tbody class="block md:table-row-group">
    <% @band.band_users.each do |band_user| %>
      <tr class="border block md:table-row hover:bg-slate-800" id="<%= dom_id band_user %>">
        <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
          <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.user.email') %></span>
          <%= band_user.user.email %>
        </td>

        <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
          <span class="inline-block w-1/3 md:hidden font-bold">&nbsp;</span>

          <% unless @band.owner.id == band_user.user_id %>
            <%= button_to t('delete'),
              band_band_user_path(@band, band_user.user),
              method: :delete, 
              class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600',
              data: { 'turbo-frame': 'new_band_user' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

