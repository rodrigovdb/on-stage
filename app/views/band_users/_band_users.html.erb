<table class="min-w-full block md:table">
  <thead class="block md:table-header-group bg-indigo-100 dark:bg-indigo-900 font-bold text-gray-900 transition-colors rounded-md dark:text-light">
    <tr class="block md:table-row absolute -top-full md:top-auto -left-full md:left-auto md:relative">
      <th class="p-2 text-left block md:table-cell md:border md:dark:border-indigo-900"><%= t('models_and_attributes.attributes.user.email') %></th>
    </tr>
  </thead>

  <tbody class="block md:table-row-group">
    <% @band.users.order(:email).each do |user| %>
      <tr class="border block md:table-row hover:bg-slate-800" id="<%= dom_id user %>">
        <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
          <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.band.name') %></span>
          <%= user.email %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>

