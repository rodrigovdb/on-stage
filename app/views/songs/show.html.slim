        = link_to edit_band_song_path(@band, @song), class: 'btn-floating' do
          i.material-icons mode_edit

      li
        = link_to band_song_path(@band, @song), data: {:confirm => 'Est√° certo disto?'}, method: :delete, class: 'btn-floating' do
          i.material-icons delete

== render 'show'
