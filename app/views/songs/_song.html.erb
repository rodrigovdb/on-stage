<tr class="border block md:table-row hover:bg-slate-800" id="<%= dom_id song %>">
  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.song.name') %></span>
    <%= song.name %>
  </td>

  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.song.artist') %></span>
    <%= song.artist %>
  </td>

  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.song.key') %></span>
    <%= song.key %>
  </td>

  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold"><%= t('models_and_attributes.attributes.song.duration') %></span>
    <%= song.beauty_duration %>
  </td>

  <td class="p-2 md:border text-left block md:table-cell md:border md:dark:border-indigo-900">
    <span class="inline-block w-1/3 md:hidden font-bold">&nbsp;</span>

    <%= link_to t('show'),
      band_song_path(@band, song),
      class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600',
      data: { turbo: false } %>

    <%= link_to t('edit'),
      edit_band_song_path(@band, song),
      class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600',
      data: { 'turbo-frame': 'new_song' } %>

    <%# <%= button_to t('delete'), %>
    <%#   band_song_path(@band, song), %>
    <%#   method: :delete, %>
    <%#   class: 'bg-indigo-100 dark:bg-indigo-900 py-1 px-2 border border-indigo-900 hover:border-blue-900 rounded hover:dark:bg-indigo-600 hover:bg-indigo-600', %>
    <%#   data: { 'turbo-frame': 'new_song' } %1> %>
  </td>
</tr>
