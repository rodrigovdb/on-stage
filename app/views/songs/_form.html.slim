= form_for [@band, @song] do |f|
  - if @song.errors.any?
    #error_explanation.flash-error
      h2 = "#{pluralize(@song.errors.count, "erro")} encontrado(s)"
      ul
        - @song.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :artist
    = f.text_field :artist

  .field
    = f.label :chords
    = f.text_area :chords, rows: 10

  .actions = f.submit
