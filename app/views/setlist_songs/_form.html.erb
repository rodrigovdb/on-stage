<div class="card my-2">
  <div class="card-body">
    <%= form_with(model: [@band, @setlist, setlist_song]) do |form| %>
      <% if setlist_song.errors.any? %>
        <%= render 'errors', object: setlist_song %>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
         <%= form.collection_select :song_id, @songs, \
         :id, :name, \
         { prompt: t('app.select') }, \
         { required: 'required', class: 'form-select' } %>
      </div>

      <button class="btn btn-outline-light" type="submit">
        <i class="fa fa-plus"></i>
        <%= t('app.add', item: Song.model_name.human) %>
      </button>

      <%= link_to band_setlist_setlist_songs_path(@band, @setlist), class: 'btn btn-outline-secondary' do %>
        <%= t('app.cancel') %>
      <% end %>
    <% end %>
  </div>
</div>
